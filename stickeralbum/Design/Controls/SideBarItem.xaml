<UserControl x:Class="stickeralbum.Design.Controls.SideBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:stickeralbum.Design.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200" Background="#FF646464" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" Loaded="UserControl_Loaded">
    <Grid>
        <DockPanel>
            <Image x:Name="Icon" Margin="2" Width="30" Height="30" x:FieldModifier="public" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased" RenderOptions.ClearTypeHint="Auto"/>
            <Label x:Name="Label" DockPanel.Dock="Right" Margin="2" Content="Text" FontSize="12" VerticalContentAlignment="Center" x:FieldModifier="public" Foreground="#FFF0F0F0"/>
        </DockPanel>
    </Grid>
</UserControl>
