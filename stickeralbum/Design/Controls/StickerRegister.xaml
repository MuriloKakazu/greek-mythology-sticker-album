    <!--Grid que divide a tela no meio-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <!--Grid que divide a metade da esquerda em duas linhas-->
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--Grid do formulario superior-->
            <Grid Grid.Column="0" Grid.Row="0" MinWidth="400" MinHeight="214">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <!--Name-->
                <Label Content="Name" FontSize="20" Grid.Column="0" Grid.Row="0" Margin="90px 60px 0px 0px" FontFamily="Diogenes" VerticalAlignment="Bottom"/>
                <TextBox Text="" Grid.Column="0" Grid.Row="1" Margin="90px 0px 15px 0px" Background="#FFF5EAB8" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="130" MinHeight="25"/>
                <!--Gender-->
                <Label Content="Sexo" FontSize="23" Grid.Column="1" Grid.Row="0" Margin="15px 60px 0px 0px" FontFamily="Diogenes" VerticalAlignment="Bottom"/>
                <ComboBox Grid.Column="1" Grid.Row="1" Margin="15px 0px 15px 0px" HorizontalAlignment="Left" MinWidth="130" MinHeight="25"/>
                <!--Father-->
                <Label Content="Pai" FontSize="23" Grid.Column="0" Grid.Row="2" Margin="90px 10px 0px 0px" FontFamily="Diogenes" VerticalAlignment="Bottom"/>
                <ComboBox Grid.Column="0" Grid.Row="3" Margin="90px 0px 15px 0px" HorizontalAlignment="Left" VerticalAlignment="Top" MinHeight="25" MinWidth="135"/>
                <!--Mother-->
                <Label Content="Mãe" FontSize="23" Grid.Column="1" Grid.Row="2" Margin="15,0,0,0" FontFamily="Diogenes" VerticalAlignment="Bottom"/>
                <ComboBox Grid.Column="1" Grid.Row="3" Margin="15px 0px 15px 0px" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="130" MinHeight="25"/>
            </Grid>
            <!--Grid da descrição-->
            <Grid Grid.Column="0" Grid.Row="1" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--Description-->
                <Label Content="Descrição" FontSize="23" Grid.Column="0" Grid.Row="0" Margin="90,8,0,240" FontFamily="Diogenes" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                <TextBox Grid.Column="0" Grid.Row="1" Margin="90px 10px 0px 0px" Background="#FFF5EAB8" BorderBrush="#FFB6A120" VerticalAlignment="Top" HorizontalAlignment="Left" MinWidth="295" MinHeight="180"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Grid.Row="0" Height="300" Width="220" Margin="20,80,0,0" HorizontalAlignment="Left"/>
            <Button Grid.Column="0" Grid.Row="1" Margin="15,28,1,1" Content="Cadastrar" FontFamily="Diogenes" FontSize="35" Background="#FFF5EAB8" VerticalAlignment="Top" HorizontalAlignment="Left" MinWidth="250" Height="45"/>
        </Grid>
    </Grid>

</UserControl>
