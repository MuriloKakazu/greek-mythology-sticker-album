    <!--Grid que divide a tela no meio-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <!--Grid que divide a metade da esquerda em duas linhas-->
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid MinWidth="400" MinHeight="133">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <Button x:Name="ButtonBack" Content="Voltar" Height="40" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80,40,0,0" FontWeight="Bold" FontSize="22" FontFamily="Diogenes" Background="#FFE2C992" Click="ButtonBack_Click"/>
                <Label Content="Nome" FontSize="36" Grid.Column="0" Grid.Row="0" Margin="60,30,0,0" FontFamily="Diogenes" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center" FontWeight="Bold" Height="60" VerticalAlignment="Bottom"/>
                <TextBox x:Name="TextBoxName" Text="" Grid.Column="0" Grid.Row="1" Margin="80,0,20,0" Background="#FFE2C992" MinWidth="130" MinHeight="25" FontSize="24" FontFamily="Diogenes" BorderBrush="Black" KeyUp="TextBoxName_KeyUp" MaxHeight="40" HorizontalContentAlignment="Center" Cursor="Pen"/>
            </Grid>
            <!--Grid do formulario superior-->
            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!--Name-->
                <Label Content="Raridade" FontSize="20" Grid.Column="0" Grid.Row="0" Margin="80,5,0,0" FontFamily="Diogenes" FontWeight="Bold" VerticalContentAlignment="Bottom" VerticalAlignment="Bottom"/>
                <ComboBox x:Name="ComboBoxRarity" Grid.Column="0" Grid.Row="1" Margin="80,0,60,0" MinWidth="130" MinHeight="30" Background="White" BorderBrush="White" FontFamily="Diogenes" FontSize="22" SelectionChanged="ComboBoxRarity_SelectionChanged" MaxWidth="270" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Cursor="Pen">
                    <ComboBox.Effect>
                        <BlurEffect Radius="1.2"/>
                    </ComboBox.Effect>
                </ComboBox>
                <!--Gender-->
                <Label Content="Sexo" FontSize="23" Grid.Column="1" Grid.Row="0" Margin="20,0,0,0" FontFamily="Diogenes" VerticalAlignment="Bottom" FontWeight="Bold" VerticalContentAlignment="Bottom"/>
                <ComboBox x:Name="ComboBoxGender" Grid.Column="1" Grid.Row="1" Margin="20,0,80,0" MinWidth="130" MinHeight="30" Background="White" BorderBrush="White" FontSize="22" FontFamily="Diogenes" HorizontalContentAlignment="Center" Padding="1,3,0,3" VerticalContentAlignment="Center" Cursor="Pen">
                    <ComboBox.Effect>
                        <BlurEffect Radius="1.2"/>
                    </ComboBox.Effect>
                </ComboBox>

            </Grid>
            <Grid Grid.Column="0" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!-- Parent God -->
                <Label Content="Nível de Perigo (0 - 10)" FontSize="23" Grid.Column="1" Grid.Row="0" Margin="0" FontFamily="Diogenes" VerticalAlignment="Center" FontWeight="Bold" VerticalContentAlignment="Bottom" HorizontalAlignment="Center" MinWidth="240"/>
                <TextBox x:Name="TextBoxDangerLevel" TextWrapping="Wrap" Grid.Column="0" Grid.Row="1" Margin="0" Background="#FFE2C992" BorderBrush="Black" VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" TextAlignment="Center" UseLayoutRounding="False" FontFamily="Diogenes" FontSize="22" PreviewTextInput="TextBoxDangerLevel_PreviewTextInput" Cursor="Pen" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="160" MinHeight="36" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </Grid>
            <!--Grid da descrição-->
            <Grid Grid.Column="0" Grid.Row="3" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--Description-->
                <Label Content="Descrição" FontSize="23" Grid.Column="0" Grid.Row="0" Margin="80,0,0,0" FontFamily="Diogenes" FontWeight="Bold" VerticalContentAlignment="Bottom"/>
                <TextBox x:Name="TextBoxDescription" TextWrapping="Wrap" Grid.Column="0" Grid.Row="1" Margin="80,0,20,60" Background="#FFE2C992" BorderBrush="Black" VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" TextAlignment="Justify" UseLayoutRounding="False" FontFamily="Diogenes" FontSize="22" Cursor="Pen" Padding="20,0"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <local:Sticker x:Name="StickerNewSticker" Grid.Column="0" Grid.Row="0" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="375" MinWidth="200" MinHeight="290" MouseLeftButtonUp="StickerNewStricker_MouseLeftButtonUp" Cursor="Pen"/>
            <Label x:Name="LabelTip" FontFamily="Diogenes" FontSize="16px" Content="Clique na figurinha para alterar sua imagem" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="ButtonRegister" Grid.Column="0" Grid.Row="2" Margin="30,0,60,30" Content="Forjar" FontFamily="Diogenes" FontSize="35" Background="#FFE2C992" MinWidth="230" Height="50" BorderBrush="#FF040404" HorizontalContentAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Click="ButtonRegister_Click"/>
        </Grid>
    </Grid>
</UserControl>
