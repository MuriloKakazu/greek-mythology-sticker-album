<UserControl x:Class="stickeralbum.Design.Controls.Sticker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:stickeralbum.Design.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="350">
    <Grid>
        <DockPanel x:Name="Background" Background="White">
            <DockPanel x:Name="Frame">
                <Label x:Name="Title" VerticalAlignment="Top" Content="NAME" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" FontSize="24" FontWeight="Bold" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
                <Label x:Name="Description" Content="DESCRIPTION" DockPanel.Dock="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="1,0,0,0"/>
                <Image x:Name="Image" Margin="0" MinWidth="200" MinHeight="200" DockPanel.Dock="Top" Height="432"/>
            </DockPanel>
        </DockPanel>
    </Grid>
</UserControl>
