<UserControl x:Class="stickeralbum.Design.Controls.Sticker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:stickeralbum.Design.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="350">
    <Grid>
        <DockPanel>
            <Image x:Name="ImageSticker" Margin="0" MinWidth="350" MinHeight="458" DockPanel.Dock="Top"/>
        </DockPanel>
        <Image x:Name="Frame"/>
        <Label x:Name="LabelName" Content="NAME" FontSize="24" FontWeight="Bold" DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
